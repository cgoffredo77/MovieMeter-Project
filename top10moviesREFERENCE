  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Top Movies by Genre</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap">
  <style>
	#container {
	  display: flex;
	}

	#genres {
	  width: 450px;
	  padding: 10px;
	  font-family: 'Roboto', sans-serif;
	  font-weight: 300;
	  font-size: 10pt;
	}

	#genres-title {
	  font-size: 20px;
	  font-weight: medium;
	  margin-bottom: 10px;
	}

	.genre-button {
	  width: 100px;
	  height: 40px;
	  margin: 5px;
	  border: 1.5px solid black;
	  border-radius: 20px;
	  cursor: pointer;
	  background-color: white;
	  color: black;
	  font-family: 'Roboto', sans-serif;
	  font-weight: 300;
	  font-size: 10pt;
	}

	.movies-container {
	  display: flex;
	  flex-wrap: wrap;
	}

	.movie {
	  width: 200px;
	  margin: 10px;
	  font-family: 'Roboto', sans-serif;
	  font-weight: 300;
	  font-size: 10pt;
	}

	.movie img {
	  width: 100%;
	  border-radius: 10px;
	}
  </style>
